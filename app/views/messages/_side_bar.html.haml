.Side-bar
  .Side-bar__user-name
    .Side-bar__user-name__top-items
      .Side-bar__user-name__top-items__name
        = current_user.name
      .Side-bar__user-name__top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .Side-bar__group_list 
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
          
